{
	"name": "Spotify Mini Player",
	"version": "1.0",
	"description": "A player that lets you work without hassle",
	"manifest_version": 2,
	"background": {
		"scripts": ["jquery-3.5.1.min.js","background.js"],
		"persistent": false
	},
	"browser_action": {
		"default_popup": "design.html"
	},
	
	"permissions": [
		"storage",
		"contextMenus",
		"activeTab",
		"tabs",
		"https://open.spotify.com/*",
		"https://accounts.spotify.com/*",
		"https://www.google.com/*"
	]
}